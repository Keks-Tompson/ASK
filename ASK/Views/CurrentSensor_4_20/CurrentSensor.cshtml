@{
}
@using ASK.Controllers.Setting

<div class="container-fluid">


   <style>
        table {}
        td, th {}
        th {}
        tbody tr:bordered
        {background: #FFDEAD;}
        tbody tr:hover {
        background: #FFDEAD; /* Цвет фона при наведении */
        /*color: #fff; /* Цвет текста при наведении */
   }
  </style>


    <div  style="font-family: Times New Roman" , Times, serif; font-size: 20%;">

        <table class="table table-striped   table-bordered  + text-center  " style="box-shadow: 0 0 1px; font-size: 86%; line-height: 110%;">
          <thead>
            <tr class="table-secondary"  style="font-weight:bold; background: #FFDEAD;" >
                            <td style="vertical-align: middle">Время</td>

                            @*Коонцентрации*@
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.CO_Conc; vertical-align: middle">CO (4-20мА)</td>   @*display: table-cell/none;*@
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.CO2_Conc; vertical-align: middle">CO2 (4-20мА)</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.NO_Conc; vertical-align: middle">NO (4-20мА)</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.NO2_Conc; vertical-align: middle">NO₂ (4-20мА)</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.NOx_Conc; vertical-align: middle">NOₓ (4-20мА)</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.SO2_Conc; vertical-align: middle">SO₂ (4-20мА)</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Dust_Conc; vertical-align: middle">Тв.ч. (4-20мА)</td>                
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.CH4_Conc; vertical-align: middle">CH₄. (4-20мА).</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.H2S_Conc; vertical-align: middle">H₂S. (4-20мА).</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Add_Conc_1; vertical-align: middle">Add_Conc_1. (4-20мА)</td>   @*Дополнительные компоненты, переименовать если будут испол.*@
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Add_Conc_2; vertical-align: middle">Add_Conc_2. (4-20мА)</td>   @*Дополнительные компоненты, переименовать если будут испол.*@
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Add_Conc_3; vertical-align: middle">Add_Conc_3. (4-20мА)</td>   @*Дополнительные компоненты, переименовать если будут испол.*@
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Add_Conc_4; vertical-align: middle">Add_Conc_4. (4-20мА)</td>   @*Дополнительные компоненты, переименовать если будут испол.*@
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Add_Conc_5; vertical-align: middle">Add_Conc_5. (4-20мА)</td>   @*Дополнительные компоненты, переименовать если будут испол.*@

                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.O2_Dry; vertical-align: middle">О₂ сух (4-20мА)</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.O2_Wet; vertical-align: middle">О₂ вл (4-20мА)</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.H2O; vertical-align: middle">H₂O (4-20мА)</td> 

                            @*Параметры*@
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Pressure; vertical-align: middle">Давление ДГ (4-20мА)</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Temperature; vertical-align: middle">Температура ДГ (4-20мА)</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Speed; vertical-align: middle">Скорость ДГ (4-20мА)</td>
                                         
                            
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Temperature_KIP; vertical-align: middle">Температура КИП (4-20мА)</td>                   
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Temperature_NOx; vertical-align: middle">Температура NOx (4-20мА)</td>
                            
                                                          
                            
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Mode_ASK; vertical-align: middle">Режим</td>
                            <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.PDZ_Fuel; vertical-align: middle">ПДК</td>
                        </tr>
          </thead>
  
           @foreach (var tableCurrent in GlobalStaticSettingsASK.Sensor_4_20s)
                        {
                            <tr>
                                        <td style=" padding: 3px;">@tableCurrent.Date.Hour:@tableCurrent.Date.Minute:@tableCurrent.Date.Second </td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.CO_Conc; padding: 3px;">@tableCurrent.CO_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.CO2_Conc; padding: 3px; ">@tableCurrent.CO2_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.NO_Conc; padding: 3px; ">@tableCurrent.NO_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.NO2_Conc; padding: 3px; ">@tableCurrent.NO2_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.NOx_Conc; padding: 3px; ">@tableCurrent.NOx_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.SO2_Conc; padding: 3px; ">@tableCurrent.SO2_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Dust_Conc; padding: 3px; ">@tableCurrent.Dust_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.CH4_Conc; padding: 3px; ">@tableCurrent.CH4_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.H2S_Conc; padding: 3px; ">@tableCurrent.H2S_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Add_Conc_1; padding: 3px;">@tableCurrent.Rezerv_1_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Add_Conc_2; padding: 3px; ">@tableCurrent.Rezerv_2_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Add_Conc_3; padding: 3px; ">@tableCurrent.Rezerv_3_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Add_Conc_4; padding: 3px; ">@tableCurrent.Rezerv_4_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Add_Conc_5; padding: 3px; ">@tableCurrent.Rezerv_5_4_20mA</td>

                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.O2_Dry; padding: 3px;">@tableCurrent.O2_Dry_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.O2_Wet; padding: 3px;">@tableCurrent.O2_Wet_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.H2O; padding: 3px;">@tableCurrent.H2O_4_20mA</td>
                                  
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Pressure; padding: 3px;">@tableCurrent.Pressure_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Temperature; padding: 3px;">@tableCurrent.Temperature_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Speed; padding: 3px;">@tableCurrent.Speed_4_20mA</td>
                                    
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Temperature_KIP; padding: 3px;">@tableCurrent.Temperature_KIP_4_20mA</td>
                                        <td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.Temperature_NOx; padding: 3px;">@tableCurrent.Temperature_NOx_4_20mA</td>
                                
                                        
                                
                                        @*<td style=" display:@GlobalStaticSettingsASK.VisibilityOptions20M.Mode_ASK; padding: 3px; @ReportDailyController.mode_ASK_String_color[Convert.ToInt32(RepDay.Mode_ASK)]">@ReportDailyController.mode_ASK_String[Convert.ToInt32(RepDay.Mode_ASK)]</td>*@
                                        @*<td style="display:@GlobalStaticSettingsASK.VisibilityOptions20M.PDZ_Fuel; padding: 3px;">@tableCurrent.PDZ_Fuel</td>*@

                             </tr>
                        }

        </table>
    </div>
</div>